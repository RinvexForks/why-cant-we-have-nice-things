{% set title = title ? "#{title} - #{app_name}" : "#{app_name}" %}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ assets.main.css }}">
</head>
<body>
    {% include '_layouts/partials/navbar.twig' %}

    <main class="container">
        <header class="page-header text-center">
            <h1 class="layout-header">
                <a href="/">{{ app_name }}</a>
            </h1>

            {% if subtitle %}
                <h2>{{ subtitle }}</h2>
            {% endif %}
        </header>

        {% block content %}{% endblock %}
    </main>

    {% include '_layouts/partials/footer.twig' %}

    <script src="{{ assets.main.js }}"></script>
</body>
</html>
