{% extends 'layout.twig' %}

{% block content %}
    <p>Only users who voted more than 5 times are taken into account.</p>

    <table class="table table-striped table-sm table-hover">
        <thead>
        <tr>
            <th>User</th>
            <th>Voted yes</th>
            <th>Voted no</th>
            <th># of votes</th>
            <th>Approval %</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a target="_blank" href="https://people.php.net/user.php?username={{ user.name }}">{{ user.name }}</a>
                </td>
                <td>{{ user.voted_yes }}</td>
                <td>{{ user.voted_no }}</td>
                <td>{{ user.total }}</td>
                <td>{{ user.approval * 100 }}%</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
