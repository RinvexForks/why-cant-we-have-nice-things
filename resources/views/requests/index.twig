{% extends '_layouts/layout.twig' %}
{% set title = 'RFCs' %}

{% block content %}
    <table class="table table-striped table-condensed table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th># of votes</th>
            <th>Approval %</th>
        </tr>
        </thead>
        <tbody>
        {% for request in requests %}
            <tr>
                <td>
                    <a href="{{ request.link }}">{{ request.name }}</a>
                </td>
                <td>{{ request.votes.count() }}</td>
                <td>{{ request.approval * 100 }}%</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
